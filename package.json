{
  "name": "react-boilerplate",
  "displayName": "React Boilerplate",
  "description": "Supercharge your React development workflow with the React Boilerplate VSCode Extension! ",
  "icon": "images/React_Logo_SVG.svg.png",
  "publisher": "ArtemRuzaev",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.86.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "workspaceContains:**/src/**/*.js",
    "workspaceContains:node_modules/react"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [{
      "command": "react-boilerplate.Insert: Boilerplate",
      "title": "Insert boilerplate"
    }]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.86.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.9"
  }
}
